<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#909078"
    android:layoutAnimation="@anim/animacion_layout">


    <TextView
        android:id="@+id/texto1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ANIMACIONES"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:layout_margin="20sp"
        android:fontFamily="sans-serif-black" />

    <TextView
        android:id="@+id/texto2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPIITA"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:layout_margin="20sp"
        android:fontFamily="sans-serif-black" />

    <TextView
        android:id="@+id/texto3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IPN"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:layout_margin="20sp"
        android:fontFamily="sans-serif-black" />

    <TextView
        android:id="@+id/texto4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TELEMATICA"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:layout_margin="20sp"
        android:fontFamily="sans-serif-black" />


    <TextView
        android:id="@+id/texto5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PROGRAMACION DE DISPOSITIVOS MOVILES"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:layout_margin="20sp"
        android:fontFamily="sans-serif-black" />

    <TextView
        android:id="@+id/texto6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DECIGA GARCIA RAFAEL"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:layout_margin="20sp"
        android:fontFamily="sans-serif-black" />

    <Button
        android:id="@+id/bt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="boton"
        android:textSize="24dp"
        android:layout_margin="20sp"
        android:backgroundTint="#897899"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/logo"
        android:layout_gravity="center"/>


</LinearLayout>